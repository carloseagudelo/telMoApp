<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_row_select"
    android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp" />
    <!---Motel Name-->
    <TextView
        android:id="@+id/motel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_view"
        android:layout_toRightOf="@+id/image_view"
        android:text="@string/test"
        android:textSize="17dp" />
    <!--Description-->
    <TextView
        android:id="@+id/motel_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motel_name"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/image_view"
        android:text="@string/test"
        android:textSize="15dp" />
    <!--Type-->
    <TextView
        android:id="@+id/motel_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motel_description"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_view"
        android:text="@string/test"
        android:textSize="13dp" />
    <!--Addres-->
    <TextView
        android:id="@+id/motel_addres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/image_view"
        android:gravity="right"
        android:text="@string/test"
        android:textSize="12dp" />
</RelativeLayout>
